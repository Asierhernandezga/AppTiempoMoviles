<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apptiempo">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <permission
        android:name="com.example.usuario.googlemapstest.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.usuario.googlemapstest.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppTiempo">
        <activity
            android:name=".Estaciones"
            android:exported="true" />
        <activity
            android:name=".GipuzkoaConsultas"
            android:exported="true" />
        <activity
            android:name=".ArabaConsultas"
            android:exported="true" />
        <activity
            android:name=".BizkaiaConsultas"
            android:exported="true" />
        <activity
            android:name=".Provincias"
            android:exported="true" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.apptiempo.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".PantallaFoto"
            android:exported="true" />
        <activity
            android:name=".PantallaRegistrar"
            android:exported="true"
            android:label="@string/pantallaRegistro" />
        <activity
            android:name=".PantallaPrincipal"
            android:exported="true"
            android:label="@string/pantallaPrincipal" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/pantallaLogin" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:exported="true"
            android:label="@string/pantallaMapa" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/pantallaMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>